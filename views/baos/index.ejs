<%- include('../partials/html-head') %>
	<%- include('../partials/nav') %>



		<div class="container mt-4">
			<div class="row">
				<!-- First Column -->
				<div class="col-md-6">
					<section>
						<h2>Here is the list, baobao!</h2>
						<ul>
							<% baos.forEach(bao=> { %>
								<li>
									🥟
									<a href="/baos/<%= bao._id %>">
										<%= bao.name %>
									</a>
								</li>
								<% }) %>
						</ul>
					</section>
				</div>

				<!-- Second Column -->
				<div class="col-md-6">
					<section>
						<h1>Bao family is growing! 🥟🥟🥟</h1>
						<% if (user) { %>
							<h2>Add a Bao!</h2>
							<form action="/baos" method="POST">
								<div class="mb-3">
									<label for="name" class="form-label">Name:</label>
									<input type="text" class="form-control" id="name" name="name" autocomplete="off">
								</div>
								<div class="mb-3">
									<label for="recipe" class="form-label">Recipe Details</label>
									<textarea class="form-control" id="recipe" name="recipe" rows="5" cols="33"></textarea>
								</div>
								<label>
									Tags (comma separated)
									<input type="text" class="form-control"  name="tagString" autocomplete="off">
								</label>
								<label>
									Cooking Process:
									<select name="cookingStyle">
										<option value="steamed">Steamed</option>
										<option value="fried">Fried</option>
										<option value="steamed and sauteed">Steamed and Sauteed</option>
									</select>
								</label>

								<button type="submit" class="btn btn-primary">Add 🥟</button>
							</form>
							<% } %>
					</section>
				</div>
        <div class="d-flex justify-content-center mt-4">
          <img src="https://cdn.discordapp.com/attachments/791636167304151071/1156284283493826630/AS0004180_03.gif?ex=65146927&is=651317a7&hm=cbcbc724ccbb4529d17004bccc6dd0f7919d684f76e04819e0db27f23907854e&" alt="Bao Zi" class="img-fluid rounded" style="max-width:500px;">
        </div>

			</div>
		</div>

		<%- include('../partials/footer') %>