<%- include('./partials/html-head') %>
	<%- include('./partials/nav') %>

		<main class="container mt-5">
			<!-- Hero section for Bao Zi recipe -->
			<section class="text-center">
				<h1 class="display-4">See your Baozi in our restaurant! </h1>
				<p class="lead">Discover Baozi Maestro Recipes or Create Your Own!</p>
				<div class="mb-3">
					<img
						src="https://cdn.discordapp.com/attachments/791636167304151071/1156284282919194624/AS0004180_00.gif?ex=65146927&is=651317a7&hm=a7ddb30be45ca9edbac829f6861b11757b2c887c85c00a66ab8261f84a798bbc&"
						alt="Bao Zi" class="img-fluid rounded mx-auto d-block" style="max-width: 500px;">
				</div>
				<a href="/baos" class="btn btn-primary mt-3">Your Bao Adventure!</a>
			</section>

			<!-- Personal greeting based on user status -->
			<section class="text-center mt-5">
				<h2 class="h3">Ni Hao, <%= user ? user.profile.name : "friend" %>!</h2>
				<% if (user?.profile.avatar) { %>
					<div class="mt-3">
						<img src="<%= user.profile.avatar %>" alt="<%= user.profile.name %> avatar" class="rounded-circle"
							style="width: 100px; height: 100px;">
					</div>
					<% } %>
			</section>
		</main>

		<%- include('./partials/footer') %>