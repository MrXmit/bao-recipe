<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>

<main class="container mt-5">
    <!-- Hero section for Bao Zi recipe -->
    <section class="text-center">
        <h1 class="display-4">Delicious Bao Zi Recipe</h1>
        <p class="lead">Discover the secrets combinations to have the perfect Bao Zi at home.</p>
        <div class="mb-3">
						<img src="https://cdn.discordapp.com/attachments/791636167304151071/1156275067345457262/AS0004180_07.gif?ex=65146092&is=65130f12&hm=8d4ae3ede9f288d088d7e36a374a21261169f4654056e0d5b52b84d2479b53ba&" alt="Bao Zi" class="img-fluid rounded mx-auto d-block" style="max-width: 500px;">
        </div>
        <a href="/baos" class="btn btn-primary mt-3">Get the Recipe</a>
    </section>

    <!-- Personal greeting based on user status -->
    <section class="text-center mt-5">
        <h2 class="h3">Ni Hao, <%= user ? user.profile.name : "friend" %>!</h2>
        <% if (user?.profile.avatar) { %>
        <div class="mt-3">
            <img src="<%= user.profile.avatar %>" alt="<%= user.profile.name %> avatar" class="rounded-circle" style="width: 100px; height: 100px;">
        </div>
        <% } %>
    </section>
</main>

<%- include('./partials/footer') %>
